                id=torch.cat(
                    [
                        data_dict["ID"]
                        for _ in range(self.model_config["local_lookback_window"])
                    ],
                    dim=0,
                ),
            )

            abs_factor_features = torch.stack(
                abs_factor_features.squeeze().split(data_dict["ID"].size()[0], dim=0),
